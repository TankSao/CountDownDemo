<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <RelativeLayout
        style="@style/TitleStyle_Relative">
        <TextView
            android:id="@+id/title_tv"
            style="@style/TitleStyle_Text"
            android:layout_centerHorizontal="true"
            android:text="倒计时" />
    </RelativeLayout>


    <EditText
        android:id="@+id/phone_num"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/yjbiankuang_black"
        android:hint="请输入手机号码"
        android:paddingLeft="10dp"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/linear_yzm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yjbiankuang_black"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/yzm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:hint="请输入验证码"
            android:paddingLeft="10dp"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/yzm_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yzm"
            android:background="@drawable/yjbiankuang_red_2"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:text="获取验证码"
            android:textColor="#ffffff" />
    </LinearLayout>

    <EditText
        android:id="@+id/pwd1"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yjbiankuang_black"
        android:singleLine="true"
        android:hint="请输入密码"
        android:paddingLeft="10dp"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/pwd2"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:background="@drawable/yjbiankuang_black"
        android:hint="请再次输入密码"
        android:paddingLeft="10dp"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/btn_sure"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/yjbiankuang_red_2"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>
